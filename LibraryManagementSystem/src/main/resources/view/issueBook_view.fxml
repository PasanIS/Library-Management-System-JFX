<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.IssueBookFormController">
    <ImageView fitHeight="400.0" fitWidth="600.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
        <Image url="@../imgs/issueBook.png" />
    </ImageView>
    <Label layoutX="29.0" layoutY="26.0" text="ISSUE BOOKS">
        <font>
          <Font name="Maiandra GD" size="36.0" />
        </font>
    </Label>
    <JFXComboBox fx:id="cboxSelectMember" layoutX="205.0" layoutY="123.0" prefHeight="26.0" prefWidth="166.0" promptText="Select Member By Name" unFocusColor="BLACK" />
    <JFXComboBox fx:id="cboxCategory" layoutX="205.0" layoutY="167.0" prefHeight="26.0" prefWidth="166.0" promptText="Category" unFocusColor="BLACK" />
    <JFXComboBox fx:id="cboxBook" layoutX="390.0" layoutY="167.0" prefHeight="26.0" prefWidth="166.0" promptText="Book" unFocusColor="BLACK" />
    <Label fx:id="lblSelectBook" layoutX="51.0" layoutY="170.0" text="Select Book">
        <font>
          <Font name="System Bold" size="15.0" />
        </font>
    </Label>
    <DatePicker fx:id="datePickerIssueDate" layoutX="205.0" layoutY="212.0" prefHeight="26.0" prefWidth="166.0" promptText="MM / DD / YYYY" />
    <Label fx:id="lblCurrentTime" layoutX="388.0" layoutY="212.0" prefHeight="26.0" prefWidth="166.0" style="-fx-font-weight: bold; -fx-text-fill: #000000; -fx-font-size: large;" text="Time will appear here . . ." />
    <Label fx:id="lblIssueDate" layoutX="51.0" layoutY="215.0" text="Issue Date">
        <font>
          <Font name="System Bold" size="15.0" />
        </font>
    </Label>
    <JFXButton fx:id="btnIssueBook" buttonType="RAISED" layoutX="252.0" layoutY="297.0" onAction="#btnIssueBookOnAction" opacity="0.9" style="-fx-background-color: #2E8B57;" text="Issue Book" textFill="WHITE">
        <font>
          <Font name="System Bold" size="13.0" />
        </font>
    </JFXButton>
    <JFXButton fx:id="btnClear" buttonType="RAISED" layoutX="366.0" layoutY="297.0" onAction="#btnClearOnAction" opacity="0.9" prefHeight="27.0" prefWidth="79.0" style="-fx-background-color: #6C757D;" text="Clear" textFill="WHITE">
        <font>
          <Font name="System Bold" size="13.0" />
        </font>
    </JFXButton>
    <JFXButton fx:id="btnBack" buttonType="RAISED" layoutX="476.0" layoutY="297.0" onAction="#btnBackOnAction" opacity="0.9" prefHeight="27.0" prefWidth="79.0" style="-fx-background-color: #007BFF;" text="Back" textFill="WHITE">
        <font>
          <Font name="System Bold" size="13.0" />
        </font>
    </JFXButton>
    <Label fx:id="lblSelectMember" layoutX="51.0" layoutY="126.0" text="Select Member">
        <font>
          <Font name="System Bold" size="15.0" />
        </font>
    </Label>
</AnchorPane>
